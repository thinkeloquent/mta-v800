{
    "name": "@internal/runtime-template-resolver",
    "version": "1.0.0",
    "description": "Polyglot Runtime Template Resolver for Node.js",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "type": "module",
    "scripts": {
        "build": "tsc",
        "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
        "test:watch": "jest --watch",
        "lint": "biome check src/**/*.ts",
        "lint:fix": "biome check --apply src/**/*.ts"
    },
    "jest": {
        "preset": "ts-jest/presets/default-esm",
        "extensionsToTreatAsEsm": [
            ".ts"
        ],
        "testMatch": [
            "**/test/**/*.test.ts"
        ],
        "moduleNameMapper": {
            "^(\\.{1,2}/.*)\\.js$": "$1"
        },
        "transformIgnorePatterns": [
            "node_modules/(?!@internal)"
        ],
        "transform": {
            "^.+\\.tsx?$": [
                "ts-jest",
                {
                    "useESM": true
                }
            ]
        }
    },
    "dependencies": {
        "fastify": "^4.0.0",
        "fastify-plugin": "^4.0.0"
    },
    "devDependencies": {
        "@biomejs/biome": "^1.5.0",
        "@types/jest": "^29.5.0",
        "@types/node": "^20.0.0",
        "jest": "^29.7.0",
        "pino-pretty": "^13.1.3",
        "ts-jest": "^29.1.0",
        "tsx": "^4.21.0",
        "typescript": "^5.0.0"
    }
}
