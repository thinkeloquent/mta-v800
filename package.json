{
  "name": "mta-v800",
  "version": "0.1.0",
  "description": "Multi-language monorepo (Python + JavaScript) using Nx",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.23.0",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  },
  "workspaces": [
    "packages_mjs/*",
    "fastify_apps/*",
    "fastify_server",
    "frontend_apps/*"
  ],
  "scripts": {
    "build": "pnpm nx run-many --skip-nx-cache --verbose --target=build --output-style=stream",
    "build:log": "mkdir -p logs && pnpm nx run-many --skip-nx-cache --verbose --target=build --output-style=stream 2>&1 | tee logs/pnpm-build-error.log && python3 .bin/parse_pnpm_build_errors.py",
    "dev": "nx run-many -t dev --output-style=stream",
    "test": "nx run-many -t test",
    "test:log": "mkdir -p logs && pnpm nx run-many --skip-nx-cache --verbose --target=test --output-style=stream 2>&1 | tee logs/pnpm-test-error.log && python3 .bin/parse_pnpm_build_errors.py",
    "clean": "nx run-many -t clean",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "graph": "nx graph",
    "affected": "nx affected",
    "affected:build": "nx affected -t build",
    "affected:test": "nx affected -t test",
    "polynx": "node packages_mjs/project-generator/dist/index.js",
    "new": "node packages_mjs/project-generator/dist/index.js create"
  },
  "keywords": [
    "monorepo",
    "workspaces",
    "frontend",
    "fastapi",
    "fastify",
    "multi-language",
    "nx"
  ],
  "author": "",
  "license": "UNLICENSED",
  "devDependencies": {
    "@biomejs/biome": "2.3.6",
    "@types/node": "24.10.1",
    "@types/react": "18.3.27",
    "@types/react-dom": "18.3.7",
    "@vitejs/plugin-react": "5.1.1",
    "autoprefixer": "10.4.21",
    "nx": "22.0.3",
    "pino-pretty": "13.1.2",
    "postcss": "8.5.6",
    "tailwindcss": "3.4.18",
    "tsx": "4.20.6",
    "typescript": "5.9.3",
    "vite": "7.2.2",
    "vitest": "3.2.4"
  },
  "dependencies": {
    "@fastify/cors": "11.1.0",
    "@fastify/static": "8.3.0",
    "dotenv": "16.6.1",
    "fastify": "5.6.2",
    "fastify-plugin": "5.1.0",
    "ioredis": "^5.8.2",
    "pg": "^8.16.3",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "sequelize": "^6.37.7"
  },
  "peerDependencies": {
    "fastify": "5.6.2",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  }
}
